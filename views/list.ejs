<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">

    <!-- Part responsible for adding a paragraph element with item.name and div around it for each entry in the newListItems array, and also adding a form and checkbox as well as onChange to submit the checkbox for each entry -->
    <% newListItems.forEach(function(item){ %>

      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
          <p><%=  item.name  %></p>
        </div>
        <!-- Using hidden input to be able to delete list documents for custom lists by passing listTitle value -->
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>
      <% }) %>

      <!-- Part responsible for sending input of newItem to app.js-->
      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>


<%- include("footer") -%>
